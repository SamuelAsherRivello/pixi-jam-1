<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="./assets/images/favicon.ico" type="image/x-icon" />
    <title>PixiJS Jam #1</title>
  </head>
  <body>
    <!--/////////////////////////
    // Canvas Configuration Buttons
    //////////////////////////-->
    <div id="buttons">
      <button onclick="setCanvasConfig(1)">1</button>
      <button onclick="setCanvasConfig(2)">2</button>
      <button onclick="setCanvasConfig(4)">4</button>
    </div>

    <!--/////////////////////////
    // Pixi JS Canvas Container
    //////////////////////////-->
    <div id="canvas-container"></div>

    <script>
      let apps = [];

      /*///////////////////////////
        // Canvas Configuration Function
        ///////////////////////////*/
      async function setCanvasConfig(count) {
        const container = document.getElementById('canvas-container');
        container.innerHTML = ''; // Clear existing canvases
        container.className = count === 1 ? 'single-canvas' : count === 2 ? 'two-canvas' : '';

        // Destroy existing apps
        for (let app of apps) {
          if (app && typeof app.destroy === 'function') {
            app.destroy();
          }
        }
        apps = [];

        for (let i = 0; i < count; i++) {
          const canvas = document.createElement('canvas');
          canvas.id = `pixi-application-canvas-${i}`;
          container.appendChild(canvas);

          // Create and initialize new app
          const app = await window.createAndInitializeApp(canvas.id);
          apps.push(app);
        }
      }

      /*///////////////////////////
        // Initial Canvas Setup
        ///////////////////////////*/
      // Initialize with one canvas by default
      window.onload = () => setCanvasConfig(1);
    </script>
  </body>
</html>
